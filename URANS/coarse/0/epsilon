FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 1e-12;

boundaryField
{

    inlet
    {
        type            fixedValue;   // 0.5m - half channel height
        value           $internalField;
    }

    outlet
    {
        type            zeroGradient;
    }

    walls
    {
        type            fixedValue;
        value           $internalField;
    }
    circle
    {
        type            epsilonWallFunction;
    }
    front
    {
        type            empty;
    }
    back
    {
        type            empty;
    }

}
