FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0.00375;

boundaryField
{

    inlet
    {
        type            fixedValue;      // 5% turbulent intensity
        value           uniform 0;
    }

    outlet
    {
        type            zeroGradient;
    }

    walls
    {
        type            fixedValue;
        value           uniform 0;

    }
    circle
    {
        type            fixedValue;
        value           uniform 0;

    }
    front
    {
        type            empty;
    }
    back
    {
        type            empty;
    }

}

